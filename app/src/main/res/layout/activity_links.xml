<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/playlists_loading_indicator"
        android:visibility="invisible"
        android:indeterminate="true"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_film"
        android:onClick="btnFilmClicked"
        android:drawableStart="@drawable/ic_link2"
        android:visibility="invisible"
        android:layout_gravity="center_vertical"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/playlists_loading_error"
        android:textSize="20sp"
        android:visibility="invisible"
        android:text="@string/no_links_found"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/lv_playlist"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

    <ExpandableListView
        android:id="@+id/elv_playlists"
        android:drawSelectorOnTop="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ExpandableListView>

    <!-- Floating action button that start ActorsActivity when clicked -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_actors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:tint="@android:color/white"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

</FrameLayout>